<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.narij.narijsocialnetwork.fragment.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/camera" />

            <TextView
                android:id="@+id/txtFullName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imgProfile"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="15dp"
                android:text="Kami Saberi"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/txtNumberOfPosts"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:text="10"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtNumberOfFollowings"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:layout_toStartOf="@+id/txtNumberOfPosts"
                android:text="105"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/txtNumberOfFollowers"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_marginTop="25dp"
                android:layout_toStartOf="@+id/txtNumberOfFollowings"
                android:text="125"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp" />


            <TextView
                android:id="@+id/txtPosts"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtNumberOfPosts"
                android:layout_below="@+id/txtNumberOfPosts"
                android:text="posts"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtFollowings"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/txtPosts"
                android:layout_alignBottom="@+id/txtPosts"
                android:layout_marginRight="20dp"
                android:layout_toStartOf="@+id/txtPosts"
                android:text="Followings"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/txtFollowers"
                android:layout_width="65dp"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtNumberOfFollowers"
                android:layout_below="@+id/txtNumberOfFollowers"
                android:layout_marginRight="20dp"
                android:text="Followers"
                android:textAlignment="center"
                android:textColor="#888888"
                android:textSize="13sp" />

            <Button
                android:id="@+id/btnFollow"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/txtPosts"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="15dp"
                android:background="#ecf0f1"
                android:text="Edit your profile"
                android:textColor="#7c7c7c"
                android:textSize="15sp" />

        </RelativeLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcPosts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />


    </LinearLayout>

</FrameLayout>
