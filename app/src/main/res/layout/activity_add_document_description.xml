<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.narij.narijsocialnetwork.activity.AddDocumentDescriptionActivity">

    <Spinner
        android:layout_width="match_parent"
        android:id="@+id/spnCategories"
        android:layout_height="wrap_content"></Spinner>


    <EditText
        android:id="@+id/edtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Title" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edtContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="top|left"
        android:hint="Type Here" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Put your tags here" />

    <EditText
        android:id="@+id/edtTags"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Tags" />


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnSend"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/baseColor"
        fancy:fb_focusColor="@color/baseColor"
        fancy:fb_fontIconSize="36sp"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/login"
        fancy:fb_text="NEXT"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="24sp" />

    <ProgressBar
        android:id="@+id/prg"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="0" />


</LinearLayout>
