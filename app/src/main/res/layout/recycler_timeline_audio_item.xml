<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="#ecf0f1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgPause"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/music_player_pause" />

            <TextView
                android:id="@+id/txtLine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="____________________________________"
                android:textColor="#08908b" />


        </LinearLayout>

        <TextView
            android:id="@+id/txtCurrentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="83dp"
            android:layout_marginTop="50dp"
            android:text="03 : 23"
            android:textColor="#b1b4b5" />

        <TextView
            android:id="@+id/txtFinalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="50dp"
            android:text="05 : 00"
            android:textColor="#b1b4b5" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln1"
            android:layout_marginLeft="20dp"
            android:text="There is the word hello in different languages and you will hear this words in a row ..."
            android:textSize="15sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:id="@+id/ln2"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/txtTitle"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:background="#ecf0f1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_below="@+id/txtTitle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/txtLikeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="1dp"
                android:text="358"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ln3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln2"
            android:layout_marginTop="192dp"
            android:background="#ecf0f1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgComment"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/comment_hint" />

            <TextView
                android:id="@+id/txtCommentNumber"
                android:text="1 Comment"
                android:layout_marginTop="17dp"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>