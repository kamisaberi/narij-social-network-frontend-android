<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgViralPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:src="@drawable/viral_photo" />

        <LinearLayout
            android:id="@+id/ln1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="165dp"
            android:background="#e8e8e8"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgLike"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@+id/txtTitle"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/like" />

            <TextView
                android:id="@+id/txtLikeNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="3dp"
                android:text="80 K" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imgSlideLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ln1"
            android:layout_marginTop="10dp"
            android:src="@drawable/slide_line2" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtTitle"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="When it comes to landscape photography in the united states , the state of hawaii is obviously very unique. Not only is it geographically ..." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="#dbdbdb"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgComment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/comment_hint" />

        <TextView
            android:id="@+id/txtCommentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:text="12 Comments" />

    </LinearLayout>

</LinearLayout>