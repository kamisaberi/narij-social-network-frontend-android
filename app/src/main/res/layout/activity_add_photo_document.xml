<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.narij.narijsocialnetwork.activity.AddPhotoDocumentActivity">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imgNext"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/next_hint" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imgNext"
            android:text="Choose the photo (s)" />

        <TextView
            android:id="@+id/txtLine1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imgNext"
            android:layout_marginTop="10dp"
            android:text="_________________________________________________" />

        <ImageView
            android:id="@+id/imgCamera"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@+id/txtLine1"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/phone_camera" />

        <TextView
            android:id="@+id/txtCamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgCamera"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/imgCamera"
            android:text="Camera"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/txtLine2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgCamera"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/txtCamera"
            android:text="|\n|\n|\n|\n|\n" />

        <ImageView
            android:id="@+id/imgGallery"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignTop="@+id/imgCamera"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/txtLine2"
            android:src="@drawable/gallery" />

        <TextView
            android:id="@+id/txtGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imgGallery"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="27dp"
            android:layout_toEndOf="@+id/imgGallery"
            android:text="Gallery"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imgPhoto"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        fancy:fb_borderColor="#FFFFFF"
        fancy:fb_borderWidth="1dp"
        fancy:fb_defaultColor="@color/baseColor"
        fancy:fb_focusColor="@color/baseColor"
        fancy:fb_fontIconSize="36sp"
        fancy:fb_iconPosition="left"
        fancy:fb_iconResource="@drawable/login"
        fancy:fb_text="NEXT"
        fancy:fb_textColor="#FFFFFF"
        fancy:fb_textSize="24sp" />


</LinearLayout>
