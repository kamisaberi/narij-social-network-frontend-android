<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.narij.narijsocialnetwork.activity.ThankYouActivity">

    <ImageView
        android:id="@+id/imgNarig"
        android:layout_width="220dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:src="@drawable/thank_you_page" />

    <TextView
        android:id="@+id/txtThanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgNarig"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="Awesome , Thanks"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/imgTick"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@+id/txtThanks"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/tick" />

</RelativeLayout>
