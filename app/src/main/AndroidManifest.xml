<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.narij.narijsocialnetwork">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />


    <application
        android:name=".application.NarijApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginSignupActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>
        <activity android:name=".activity.ForgotPasswordActivity">

        </activity>
        <activity android:name=".activity.EnterPhoneNumberForgotPasswordActivity">

        </activity>

        <activity android:name=".activity.EnterEmailAddressForgotPasswordActivity">

        </activity>
        <activity android:name=".activity.CreatePasswordActivity">

        </activity>
        <activity android:name=".activity.ConfirmPhoneNumberActivity"></activity>
        <activity android:name=".activity.ChangePasswordActivity"></activity>
        <activity android:name=".activity.ThankYouActivity"></activity>
        <activity android:name=".activity.MainActivity">

        </activity>
        <activity android:name=".activity.AddTextDocumentActivity"></activity>
        <activity android:name=".activity.AddVideoDocumentActivity"></activity>
        <activity android:name=".activity.AddDocumentDescriptionActivity"></activity>
        <activity android:name=".activity.AddPhotoDocumentActivity"></activity>
        <activity android:name=".activity.AddAudioDocumentActivity"></activity>
        <activity android:name=".activity.ProfileActivity"></activity>
        <activity android:name=".activity.ProfilePhotoActivity"></activity>
        <activity android:name=".activity.ProfilePublicInfoActivity"></activity>
        <activity android:name=".activity.ProfilePrivateInfoActivity"></activity>
        <activity android:name=".activity.ProfileFullNameActivity"></activity>
        <activity android:name=".activity.ProfileEmailActivity"></activity>
        <activity android:name=".activity.ProfileResumeActivity"></activity>
        <activity android:name=".activity.ProfileLocationActivity"></activity>
        <activity android:name=".activity.MessagingActivity"></activity>


        <receiver android:name=".receiver.BroadcastSmsReceiver">
            <intent-filter>
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>


    </application>

</manifest>